<?xml version="1.0"?>
<configuration>
	<property>
	    <name>yarn.nodemanager.pmem-check-enabled</name>
	    <value>false</value>
	</property>

	<property>
	    <name>yarn.nodemanager.vmem-check-enabled</name>
	    <value>false</value>
	</property>
    	<property>
        	<name>yarn.nodemanager.aux-services</name>
        	<value>mapreduce_shuffle</value>
    	</property>
    	<property>
  	      	<name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
       		<value>org.apache.hadoop.mapred.ShuffleHandler</value>
    	</property>
    	<property>
        	<name>yarn.resourcemanager.hostname</name>
        	<value>hadoop-master</value>
    	</property>
	<property>
    		<name>yarn.timeline-service.enabled</name>
    		<value>true</value>
	</property>
	<property>
    		<name>yarn.timeline-service.hostname</name>
    		<value>localhost</value> <!-- Replace [ATS_HOSTNAME] with the correct hostname -->
	</property>
	<property>
        	<name>yarn.nodemanager.resource.memory-mb</name>
        	<value>2048</value> <!-- Total memory available per node in MB -->
    	</property>
	<property>
        	<name>yarn.nodemanager.resource.cpu-vcores</name>
        	<value>2</value> <!-- Total number of CPU cores available per node -->
    	</property>
    	<property>
        	<name>yarn.scheduler.maximum-allocation-vcores</name>
        	<value>2</value> <!-- Limit the maximum cores per container -->
    	</property>
</configuration>
